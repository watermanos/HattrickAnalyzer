<Window x:Class="HattrickAnalyzer.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hattrick Analyzer"
        Height="500" Width="850"
        Background="#FAFAFA"
        FontFamily="Segoe UI Variable Display">

    <Window.Resources>
        <!-- Modern button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#1B5E20"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Modern DataGrid Card -->
        <Border Grid.Column="0"
                CornerRadius="12"
                Background="#79A777"
                Padding="10"
                Margin="0,50,20,0"
                VerticalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>

            <DataGrid x:Name="PlayersGrid"
                      AutoGenerateColumns="True"
                      BorderThickness="0"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      Background="#FFCF00"
                      Foreground="#333"
                      RowBackground="#277F31"
                      AlternatingRowBackground="#FFCF00"
                      FontSize="14"
                      SelectionChanged="PlayersGrid_SelectionChanged_1"/>
        </Border>

        <!-- Right-side buttons -->
        <StackPanel Grid.Column="1"
                    Margin="0,60,0,0"
                    VerticalAlignment="Top">
            <Button Content="Analyze" Click="Analyze_Click" Margin="0,0,0,10"/>
            <Button Content="Import Player" Click="ImportCsv_Click" Margin="0,0,0,10"/>
            <Button Content="Export Player" Click="ExportExcel_Click" Margin="0,0,0,10"/>
            <Button Content="Add Player" Click="AddPlayer_Click"/>
        </StackPanel>

        <TextBlock Grid.ColumnSpan="2"
                   Text="Hattrick Analyzer"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#277F31"
                   Margin="5,0,0,10"
                   VerticalAlignment="Top"/>
    </Grid>
</Window>
